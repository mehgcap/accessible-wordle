{
  "name": "Make Wordle Accessible",
  "manifest_version": 3,
  "version": "0.4",
  "description": "Makes the popular game Wordle accessible to screen-reader users.",
  "content_scripts": [
    {
      "matches": [
        "https://www.powerlanguage.co.uk/wordle/",
        "https://www.nytimes.com/games/wordle/*"
      ],
      "js": ["wordle-script.js"]
    }
  ]
}
